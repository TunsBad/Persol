<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/styles.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/Content/jquery.min.js"></script>
    <script>
        var Api = '@System.Configuration.ConfigurationManager.AppSettings["API_URL"]';
        if (Api == '') {
            Api = 'http://localhost:34181/';
        };
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <b>@Html.ActionLink("Persol", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</b>
            </div>
            <div class="navbar-collapse collapse">
                <div class="nav navbar-nav pull-right">
                    <a class='btncolor' href="/home/Store" >
                        <span class="glyphicon glyphicon-folder-close"></span>&nbsp;&nbsp;<span class='btntext'><b>STORE CAR</b></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br /><br /><br /><br />
        <div class="mainView">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
