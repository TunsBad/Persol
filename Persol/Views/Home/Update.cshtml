@{
    ViewBag.Title = "Update Car";
}

<div class="col-md-12">
    <div class="col-md-5 col-md-offset-3">
        <form>
            <div class="form-group">
                <label for="carName">Name</label>
                <input type="text" class="form-control" id="carName" disabled>
            </div>
            <div class="form-group">
                <label for="carMake">Make</label>
                <input type="text" class="form-control" id="carMake">
            </div>
            <div class="form-group">
                <label for="carYear">Year</label>
                <input type="text" class="form-control" id="carYear">
            </div>
            <div class="form-group">
                <label for="carModel">Model</label>
                <input type="text" class="form-control" id="carModel">
            </div>
            <button id="updateCarButton" type="button" class="btn btn-primary">&nbsp;Update&nbsp;</button>
        </form>
    </div>
</div>


@section scripts {
<script>
    var CARINFO = {}

    CARINFO.carId = '@ViewBag.Details.Id';
    CARINFO.carName = '@ViewBag.Details.Name';
    CARINFO.carMake = '@ViewBag.Details.Make';
    CARINFO.carModel = '@ViewBag.Details.Model';
    CARINFO.carYear = '@ViewBag.Details.Year';

    console.log(CARINFO);
</script>
    <script src="~/Scripts/app/updatecar.js"></script>
}



